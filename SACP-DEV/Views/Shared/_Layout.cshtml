<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]- SACP</title>
    <link rel="stylesheet" href="~/Custom/bs3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Custom/css/bootstrap-reset.css" />
    <link rel="stylesheet" href="~/Custom/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Custom/plugins/DataTables/datatables.css" />
    <link rel="stylesheet" href="~/Custom/css/style.css" />
    <link rel="stylesheet" href="~/Custom/css/style-responsive.css" />
    <link rel="stylesheet" href="~/Custom/plugins/SweetAlert/sweetalert2.css" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <section id="container">
        <header class="header fixed-top clearfix">
            <div class="brand">

                <a href="index.html" class="logo">
                    <img style="width: 100px" src="~/Custom/images/logo-utt.png" alt="">
                </a>
                <div class="sidebar-toggle-box">
                    <div class="fa fa-bars"></div>
                </div>
            </div>
            <div class="nav notify-row" id="top_menu">

            </div>
            <div class="top-nav clearfix">
                <ul class="nav pull-right top-menu">
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="~/Custom/images/avatar-mini-2.png">
                            <span class="username">Usuario</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <li><a href="#"><i class="fa fa-suitcase"></i>Perfil</a></li>
                            <li><a href="#"><i class="fa fa-cog"></i> Configuración</a></li>
                            <li><a href="#"><i class="fa fa-key"></i>Cerrar Sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </header>
        <aside>
            <div id="sidebar" class="nav-collapse">
                <div class="leftside-navigation">
                    <ul class="sidebar-menu" id="nav-accordion">
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-users"></i>
                                <span>Usuarios </span>
                            </a>
                            <ul class="sub">
                                <li class="lk"><a asp-area="" asp-controller="Usuarios" asp-action="NuevoUsuario">Nuevo Usuario</a></li>
                                <li class="lk"><a asp-area="" asp-controller="Usuarios" asp-action="NuevoAlumno">Nuevo Alumno</a></li>
                                <li class="lk"><a asp-area="" asp-controller="Usuarios" asp-action="Alumno">Listado de Alumnos</a></li>
                                <li class="lk"><a asp-area="" asp-controller="Usuarios" asp-action="Index">Listado de Usuarios</a></li>
                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-book"></i>
                                <span>Prestamos </span>
                            </a>
                            <ul class="sub">
                                <li class="lk"><a asp-area="" asp-controller="Prestamos" asp-action="Index">Nuevo Prestamo</a></li>
                                <li class="lk"><a asp-area="" asp-controller="Prestamos" asp-action="PrestamoActivos">Prestamos Activos</a></li>
                                <li class="lk"><a asp-area="" asp-controller="Prestamos" asp-action="HistorialPrestamos">Historial Prestamos</a></li>
                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-tasks"></i>
                                <span>Asignar Resguardo </span>
                            </a>
                            <ul class="sub">
                                <li><a href="#">Nuevo Resguardo</a></li>
                                <li><a href="#">Devolucion Resguardo</a></li>
                                <li><a href="#">Historial de Resguardo</a></li>
                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class="fa fa-envelope"></i>
                                <span>Proveedores </span>
                            </a>
                            <ul class="sub">
                                <li class="lk"><a asp-area="" asp-controller="Proveedores" asp-action="NuevoProveedor">Nuevos Proveedor</a></li>
                                <li><a href="#">Lista de Proveedores</a></li>
                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class=" fa fa-laptop"></i>
                                <span>Equipos </span>
                            </a>
                            <ul class="sub">
                                <li><a href="#">Nuevo Equipo</a></li>
                                <li class="lk"><a asp-area="" asp-controller="Equipos" asp-action="ListEquipo">Lista de Equipo</a></li>
                                <!--<li><a href="#">Historial de Equipos</a></li>-->
                            </ul>
                        </li>
                        <li class="sub-menu">
                            <a href="javascript:;">
                                <i class=" fa fa-folder-open"></i>
                                <span>Facturas </span>
                            </a>
                            <ul class="sub">
                                <li class="lk"><a asp-area="" asp-controller="Facturas" asp-action="NuevaFactura">Nuevos Facturas</a></li>
                                <li><a href="#">Facturas</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </aside>

        <section id="main-content">
            <section class="wrapper">
                @RenderBody()
            </section>
        </section>


    </section>

    <script src="~/Custom/js/jquery.js"></script>
    <script src="~/Custom/js/jquery-1.8.3.min.js"></script>
    <script src="~/Custom/bs3/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/Custom/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Custom/js/jquery.scrollTo.min.js"></script>
    <script src="~/Custom/js/jQuery-slimScroll-1.3.0/jquery.slimscroll.js"></script>
    <script src="~/Custom/js/jquery.nicescroll.js"></script>
    <script src="~/Custom/plugins/DataTables/datatables.js"></script>
    <script src="~/Custom/plugins/SweetAlert/sweetalert2.js"></script>
    <script src="~/Custom/plugins/blockUI.js"></script>
    <script src="~/Custom/js/scripts.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
